<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incubator Detail</title>
</head>
<body>
    <%- include('_navbar2') %>
    <br>
    <div class="container" style="margin-top:50px">
        
        <h1><%= incubator.name %></h1>
        <p><strong>Code Of Incubator:</strong> <%= incubator.code %></p>
        <% if (notification) { %>
            <div class="alert alert-danger" role="alert">
                <%= notification %>
            </div>
        <% } %>
        <p>Click <a href="/incubators/<%= incubator.id %>/startUp/add" type="button" class="btn btn-dark">Add</a> to add startUp</p>
        <% if (startups && startups.length > 0) { %>
            <section>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Start-Up Name</th>
                            <th scope="col">Founder Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Education</th>
                            <th scope="col">Role of Founder</th>
                            <th scope="col">Valuation</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% startups.forEach(startup => { %>
                            <tr>
                                <td><%= startup.startUpName %></td>
                                <td><%= startup.founderName %></td>
                                <td><%= startup.age %></td>
                                <td><%= startup.educationOfFounder %></td>
                                <td><%= startup.roleOfFounder %></td>
                                <td><%= startup.valuation  %></td>
                               <td>
                                   <a href="/incubators/<%= incubator.id %>/startUp/<%= startup.id %>/edit" class="btn btn-light btn-sm" style="background-color: white; border: 1px solid grey;">Edit</a>
                                    <form action="/startUp/<%= startup.id %>/delete" method="POST" style="display: inline-block;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this startup?')">Delete</button>
                                </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                    
                </table>
            </section>
        <% } else { %>
            <p>There are no StartUps yet</p>
        <% } %>
        <p><strong>Valuation All Start-Up: <%= formattedTotalValuation %></strong></p>
        <a href="/incubators" type="button" class="btn btn-light">Back</a>
    </div>
    <%- include('_bootstrap') %>
</body>
</html>

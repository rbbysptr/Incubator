<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<%- include('_navbar') %>
<body>
    </div>
    <div class="container" style="margin-top:50px;">
    <form method="POST" style="background-color:white; padding: 20px;">
    <div class="mb-3">
        <h1>Add new Start-Up</h1>
        <h2>Incubator name: <%= incubator.name %></h2>
    </div>
<div class="mb-3">
    <label class="form-label">Start-Up Name</label>
    <input type="text" class="form-control" id="startUpName" name="startUpName">
  </div>
 <div class="mb-3">
    <label class="form-label">Founder Name</label>
    <input type="text" class="form-control" id="founderName" name="founderName">
  </div>
  <div class="mb-3">
    <label class="form-label">Date Found</label>
    <input type="date" class="form-control" id="dateFound" name="dateFound">
</div>
<div class="mb-3">
    <label for="educationOfFounder" class="form-label"">Education of Founder</label>
    <select class="form-select" aria-label="Default select example" id="educationOfFounder" name="educationOfFounder">
        <option value="" selected disabled>Select Education</option>
        <% const educationOfFounderOptions = ["SMA", "S1", "S2", "S3"] %>
        <% educationOfFounderOptions.forEach(option => { %>
            <option value="<%= option %>"><%= option %></option>
        <% }) %>
    </select>
</div>
    <div class="mb-3">
    <label class="form-label">Role Of Founder</label><br>
    <% const roleOfFounder = ["Hacker","Hipster","Hustler"] %>
    <% roleOfFounder.forEach(element =>{ %>
    <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="roleOfFounder" id="roleOfFounder_<%= element %>" value="<%= element %>">
    <label class="form-check-label" for="roleOfFounder_<%= element %>"><%= element %></label>
    </div>
    <%}) %>
    </div>
  <div class="mb-3">
    <label class="form-label">Valuation</label>
    <input type="number" class="form-control" id="valuation" name="valuation">
  </div>
<div class="text-start">
    <button type="submit" class="btn btn-light" style="width: 200px; background-color: white; color: grey; border: 1px solid grey;">Add Start-Up</button>
</div>
<a href="/" type="button" class="btn btn-light">Back</a>
    </div>
    <%- include('_bootstrap') %>
</body>
</html>